from tkinter import *
import tkinter.messagebox
import math

root = Tk()
root.geometry("650x400+300+300")

root.title("N2RCL Basic Calculator")

switch = None


class Calculator:

    # These functions are for numbers 0-9 buttons when clicked
    
    def number1_button_clicked(c):
        if disp.get() == "0":
            disp.delete(0, END)
        pos = len(disp.get())
        disp.insert(pos, "1")

    def number2_button_clicked(c):
        if disp.get() == "0":
            disp.delete(0, END)
        pos = len(disp.get())
        disp.insert(pos, "2")

    def number3_button_clicked(c):
        if disp.get() == "0":
            disp.delete(0, END)
        pos = len(disp.get())
        disp.insert(pos, "3")

    def number4_button_clicked(c):
        if disp.get() == "0":
