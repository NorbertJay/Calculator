    def number0_button_clicked(c):
        if disp.get() == "0":
            disp.delete(0, END)
        pos = len(disp.get())
        disp.insert(pos, "0")

    def key_event(c, *args):
        if disp.get() == '0':
            disp.delete(0, END)
            
            
            
# Continuation...........




    def run(c):
        root.mainloop()

